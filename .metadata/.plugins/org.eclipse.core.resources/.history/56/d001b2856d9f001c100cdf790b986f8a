abstract class Player{ // 추상클래스(미완성 클래스, 미완성 설계도)
	abstract void play(int pos); // 추상메서드(미완성메서드)
	abstract void stop(); //추상메서드(선언부만 있고 구현부가 없는 메서드
}


// 추상 클래스는 상속을 통해 완성해야 객체 생성가능
class AudioPlayer extends Player{
	void play(int pos) {System.out.println(pos + "위치부터 play합니다.");}
	void stop() {System.out.println("재생을 멈춥니다.");}
}


public class PlayerTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		Player p = new Player(); // 추상 클래스의 객체를 생성 - 불가함 
//		AudioPlayer ap = new AudioPlayer();
		Player ap = new AudioPlayer(); // 다형
		ap.play(100);
		ap.stop();
	}

}
